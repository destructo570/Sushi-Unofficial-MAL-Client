<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Text Appearance -->
    <style name="TextAppearance.Sushi.H1" parent="@style/TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/text_size_h2</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Sushi.H2" parent="@style/TextAppearance.Sushi.H1">
        <item name="android:textSize">@dimen/text_size_h3</item>
    </style>

    <style name="TextAppearance.Sushi.H3" parent="@style/TextAppearance.Sushi.H1">
        <item name="android:textSize">@dimen/text_size_h4</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextAppearance.Sushi.B1" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_size_b3</item>
    </style>

    <style name="TextAppearance.Sushi.B2" parent="TextAppearance.Sushi.B1">
        <item name="android:fontFamily">@font/poppins_extra_bold</item>
        <item name="android:textSize">@dimen/text_size_b1</item>
    </style>

    <style name="TextAppearance.Sushi.B4" parent="TextAppearance.Sushi.B1">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_size_b2</item>
    </style>

    <style name="TextAppearance.Sushi.ByLine1" parent="TextAppearance.Sushi.B1">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">@dimen/text_size_b3</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <!-- See More Text -->
    <style name="TextAppearance.Sushi.B3" parent="TextAppearance.Sushi.B1">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/text_size_b3</item>
    </style>

    <!-- App Drawer Style-->
    <style name="NavigationStyle">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <!-- Spinner Style-->
    <style name="SpinnerStyle">
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:minWidth">@dimen/spinner_min_width</item>
        <item name="android:minHeight">@dimen/spinner_min_height</item>
        <item name="android:popupElevation">@dimen/spinner_popup_elevation</item>

    </style>


    <!-- Tab Layout Style-->
    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabSelectedTextColor">@color/colorPrimaryDark</item>
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item>
        <item name="tabIndicatorHeight">4dp</item>

    </style>

    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    <style name="CollapsingTextAppearance.Inverse" >
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/abc_ic_ab_back_material</item>
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:background">@drawable/custom_button_primary</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>

    </style>



</resources>