<?xml version="1.0" encoding="utf-8"?>
    <layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.manga.MangaFragment">

        <data>

        </data>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/margin_small"
            android:paddingEnd="@dimen/margin_small"
            >

            <Spinner
                android:id="@+id/mangaRankingSpinner"
                android:layout_width="wrap_content"
                android:minWidth="96dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spinner_margin_normal"
                android:layout_marginEnd="@dimen/spinner_margin_large"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:textAlignment="center"
                android:gravity="center"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:background="@drawable/drawable_rectangle_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mangaRecyclerMain"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mangaRankingSpinner" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </layout>