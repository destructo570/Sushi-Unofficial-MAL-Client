<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/animeFragment">

    <fragment
        android:id="@+id/animeFragment"
        android:name="com.destructo.sushi.ui.anime.AnimeFragment"
        android:label="@string/title_browse_anime"
        tools:layout="@layout/fragment_anime" >
        <action
            android:id="@+id/action_animeFragment_to_topAnimeFragment"
            app:destination="@id/topAnimeFragment" />
        <action
            android:id="@+id/action_animeFragment_to_upcomingAnimeFragment"
            app:destination="@id/upcomingAnimeFragment" />
        <action
            android:id="@+id/action_animeFragment_to_currentlyAiring"
            app:destination="@id/currentlyAiring" />
        <action
            android:id="@+id/action_animeFragment_to_seasonalAnime"
            app:destination="@id/seasonalAnime" />
        <action
            android:id="@+id/action_animeFragment_to_animeDetailFragment"
            app:destination="@id/animeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/scheduleFragment"
        android:name="com.destructo.sushi.ui.animeSchedule.AnimeScheduleFragment"
        android:label="@string/title_anime_schedule"
        tools:layout="@layout/fragment_anime_schedule" />
    <fragment
        android:id="@+id/mangaFragment"
        android:name="com.destructo.sushi.ui.manga.MangaFragment"
        android:label="@string/title_browse_manga"
        tools:layout="@layout/fragment_manga" />
    <fragment
        android:id="@+id/clubFragment"
        android:name="com.destructo.sushi.ui.other.clubs.ClubFragment"
        android:label="@string/title_clubs"
        tools:layout="@layout/fragment_club" />
    <fragment
        android:id="@+id/forumFragment"
        android:name="com.destructo.sushi.ui.other.forums.forumFragment"
        android:label="@string/title_forum"
        tools:layout="@layout/fragment_forum" />
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.destructo.sushi.ui.other.news.NewsFragment"
        android:label="@string/title_news"
        tools:layout="@layout/fragment_news" />
    <fragment
        android:id="@+id/promotionFragment"
        android:name="com.destructo.sushi.ui.other.promotional.PromotionFragment"
        android:label="@string/title_promotion"
        tools:layout="@layout/fragment_promotion" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.destructo.sushi.ui.preferences.aboutApp.AboutFragment"
        android:label="@string/title_about_app"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.destructo.sushi.ui.preferences.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/topAnimeFragment"
        android:name="com.destructo.sushi.ui.anime.topAnime.TopAnimeFragment"
        android:label="@string/title_top_anime"
        tools:layout="@layout/fragment_top_anime">
        <argument android:name="topAnime"
            app:argType="com.destructo.sushi.model.mal.animeRanking.AnimeRanking"/>
        <action
            android:id="@+id/action_topAnimeFragment_to_animeDetailFragment"
            app:destination="@id/animeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/upcomingAnimeFragment"
        android:name="com.destructo.sushi.ui.anime.upcomingAnime.UpcomingAnimeFragment"
        android:label="@string/title_upcoming_anime"
        tools:layout="@layout/fragment_upcoming_anime">
        <argument android:name="upcomingAnime"
        app:argType="com.destructo.sushi.model.mal.animeRanking.AnimeRanking"/>
        <action
            android:id="@+id/action_upcomingAnimeFragment_to_animeDetailFragment"
            app:destination="@id/animeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/currentlyAiring"
        android:name="com.destructo.sushi.ui.anime.currentlyAiring.CurrentlyAiring"
        android:label="@string/title_currently_airing"
        tools:layout="@layout/fragment_currently_airing" >
        <argument android:name="currentlyAiring"
            app:argType="com.destructo.sushi.model.mal.animeRanking.AnimeRanking"/>
        <action
            android:id="@+id/action_currentlyAiring_to_animeDetailFragment"
            app:destination="@id/animeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/seasonalAnime"
        android:name="com.destructo.sushi.ui.anime.seasonalAnime.SeasonalAnimeFragment"
        android:label="@string/title_seasonal_anime"
        tools:layout="@layout/fragment_seasonal_anime" >
        <argument android:name="seasonalAnime"
            app:argType="com.destructo.sushi.model.mal.seasonalAnime.SeasonalAnime"/>
        <action
            android:id="@+id/action_seasonalAnime_to_animeDetailFragment"
            app:destination="@id/animeDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/animeDetailFragment"
        android:name="com.destructo.sushi.ui.anime.animeDetails.AnimeDetailFragment"
        android:label="fragment_anime_detail"
        tools:layout="@layout/fragment_anime_detail" >

        <argument android:name="animeId"
            app:argType="integer"/>
        <action
            android:id="@+id/action_animeDetailFragment_self"
            app:destination="@id/animeDetailFragment" />
    </fragment>
</navigation>