<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="staff"
            type="com.destructo.sushi.model.jikan.anime.support.Staff" />
        <variable
            name="staffListener"
            type="com.destructo.sushi.ui.anime.listener.AnimeStaffListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_micro"
        android:onClick="@{() -> staffListener.onClick(staff)}"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/imageView"
            android:layout_width="@dimen/character_img_width"
            android:layout_height="@dimen/character_img_height"
            android:elevation="0dp"
            app:cardCornerRadius="@dimen/default_corner_radius"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                imageUrl="@{staff.imageUrl}"
                app:srcCompat="@drawable/test_img" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView7"
            smallTitleFormatted="@{staff.name}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_micro"
            android:textAppearance="@style/TextAppearance.Sushi.B4"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Sakata"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            smallTitleFormatted="@{staff.positions[0]}"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Sakata"
            android:textAppearance="@style/TextAppearance.Sushi.ByLine1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>